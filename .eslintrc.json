{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:jest/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "react/prop-types": 0,
    "semi": ["error", "always"],
    "eqeqeq": "off",
    "react/jsx-no-bind": "off",
    "react/no-deprecated": "error",
    "no-console": "error",
    "valid-jsdoc": [
      2,
      {
        "returnRequiredIfReturnUndefined": false
      }
    ]
  },
  "plugins": ["import", "react", "jsx-a11y", "jest"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "spread": true,
      "restParams": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16.7.0"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "document": false
  }
}
